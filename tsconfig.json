{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "lib": [
      "es2016",
      "dom",
      "es6"
    ],
    "types": [
      "node"
    ],
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "lib"
  ]
}